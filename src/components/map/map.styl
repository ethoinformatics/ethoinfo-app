.map
  width 100%
  height 100%

  .leafletMount
    width 100%
    height 100%
  
  .markerStatic
    z-index: 1000;
    background-color: #2196f3;
    width: 10px;
    height: 10px;
    position: absolute;
    top: 15px;
    left: 15px;
    border-radius: 10px;
    /* border: 1px solid #fff; */
    box-sizing: border-box;

  .markerPulse
    z-index 999
    .sk-spinner
      margin 0
      background-color #2196F3