.menu
  .page__content
    // Override global padding defined in app.styl
    padding 0
.menuItems
  list-style none
  padding 0
  margin 0
.menuItem
  cursor pointer
  position relative
  height 44px
  line-height 44px
  margin 0
  padding 0
  // border-bottom 1px solid #bbb
  background-image linear-gradient(0deg, #ccc, #ccc 50%, transparent 50%)
  background-size 100% 1px
  background-repeat no-repeat
  background-position bottom

  button
    outline none
    border none
    padding 0 0 0 1em
    background transparent
    height 100%
    width 100%
    text-align left
    cursor pointer

.menuItemLabel
  margin-left 0.5em
