.geolocationField

  label
    margin-bottom 0.5em

  .fab
    display inline-block
    cursor pointer
    margin-right 0.5em

  .geolocating, .nullGeo
    display inline-block
    height 56px
    line-height 56px

  .latLong
    display inline-block
    vertical-align top

    .lat, .long, .separator
      line-height 28px
    
    .lat, .separator
      display inline-block
    
    .long
      display block
