.collectionField
  .accordion
    padding-top 0
    padding-bottom 0.5em
  
  .delete
    width 32px
    height 32px
    line-height 32px
    margin 0
    padding 0
    position: absolute
    right 6px
    top 6px
    font-size 22px
    outline none
    border none
    background transparent
    color red
    cursor pointer

.collectionHeader
  position relative
  width 100%
  outline none
  border none
  text-align left
  background #eee
  height 44px
  line-height 44px
  padding 0
  color #888
  
  .collectionHeaderLabel
    font-weight 700
    font-size 12px
    text-transform uppercase
    letter-spacing 0.6px
    position relative
    display inline-block
    vertical-align top
    height 44px
    line-height 44px
    margin 0
    padding 0
    color inherit
    color #888

  .expandButton
    height 44px
    line-height 44px
    width calc(100% - 44px)
    text-align left
    background transparent
    border none
    outline none
    cursor pointer !important
    color #888
  
  &:hover
    background #000
    color #fff
    .collectionHeaderLabel
      color #fff
    .expandButton
      color #fff




.newHeaderButton
  margin 0
  padding 0
  width 44px
  height 44px
  position absolute
  text-align center
  line-height 44px
  // color #000
  color inherit
  top 0
  right 0
  z-index 99

.accordionIcon
  display inline-block
  text-align center
  background transparent
  border none
  outline none
  width 44px
  height 44px
  font-size 24px
  position relative
  top 0
  left 0
  color inherit

.accordion
  .list
    height 0

  &.isExpanded
    .list
      height auto
